{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "make debug dir",
            "command": "cmd",
            "args": [
                "/C",
                "if not exist ${fileDirname}\\debug mkdir ${fileDirname}\\debug"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "cmake prepare build debug",
            "command": "cmake",
            "args": [
                "${fileDirname}",
                "-G",
                "MinGW Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "dependsOn": [
                "make debug dir"
            ],
            "options": {
                "cwd": "${fileDirname}/debug"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "cmake build debug",
            "command": "cmake",
            "args": [
                "--build",
                "."
            ],
            "dependsOn": [
                "cmake prepare build debug"
            ],
            "options": {
                "cwd": "${fileDirname}/debug"
            },
            "problemMatcher": []
        }
    ]
}